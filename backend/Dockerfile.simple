# 使用官方Node.js运行时作为基础镜像
FROM node:18-slim

# 设置工作目录
WORKDIR /app

# 复制已构建的应用和依赖
COPY dist ./dist
COPY node_modules ./node_modules
COPY package.json ./

# 暴露端口
EXPOSE 3001

# 设置环境变量
ENV NODE_ENV=development
ENV PORT=3001
ENV JWT_SECRET=your_jwt_secret_key_for_development
ENV DB_DIALECT=sqlite
ENV DB_STORAGE=./database.sqlite

# 启动应用
CMD ["node", "dist/main.js"]